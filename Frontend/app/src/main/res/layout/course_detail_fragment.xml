<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragmente.CourseDetailFragment">

    <Button
            android:id="@+id/detailContactButton"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginBottom="28dp"
            android:background="@color/colorPrimary"
            android:text="Tutor Kontaktieren"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/detailCourseTitleTV"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginTop="48dp"
            android:text="Title des Kurses"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
            android:id="@+id/detailCourseDescriptionTV"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="Beschreibung des Kurses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailCourseTitleTV" />

    <TextView
            android:id="@+id/detailCoursePrivateTV"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:text="Nutzung"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailCourseDescriptionTV" />

    <TextView
            android:id="@+id/detailCourseModuleTV"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Modul"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailCoursePrivateTV" />

    <TextView
            android:id="@+id/detailCourseInReturnTV"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:text="Gegenleistung"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailCourseModuleTV" />

    <TextView
            android:id="@+id/detailCourseCreator"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="Tutor"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailCourseInReturnTV" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/minti_green" />

</androidx.constraintlayout.widget.ConstraintLayout>