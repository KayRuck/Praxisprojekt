<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">>
<LinearLayout
        android:id="@+id/userEditFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/editUserName"
        app:layout_constraintTop_toTopOf="@+id/editUserName">

    <TextView
            android:id="@+id/editUserTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:text="Erstellung des Profils"
            android:textSize="18sp" />

    <EditText
            android:id="@+id/editUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/editUserEMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:hint="E-Mail"
            android:inputType="text|textEmailAddress" />

    <TextView
            android:id="@+id/validateEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="Hier soll stehen ob die E-Mail Valide ist" />

    <EditText
            android:id="@+id/editUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:hint="Passwort"
            android:inputType="textPassword" />

    <EditText
            android:id="@+id/editUserPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="Passwort wiederholen"
            android:inputType="textPassword" />

    <TextView
            android:id="@+id/validatePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="Hier soll stehen ob das Password valide ist und meine Eingaben gleich" />

    <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:hint="WÃ¤hle deine Module" />

    <EditText
            android:id="@+id/editUserContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="Handynummer"
            android:inputType="phone" />

    <EditText
            android:id="@+id/editUserDescrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="Beschreibung"
            android:inputType="textPersonName" />

    <Button
            android:id="@+id/editUserButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorPrimary"
            android:text="Erstellen"
            android:textColor="@color/white" />


</LinearLayout>
</ScrollView>